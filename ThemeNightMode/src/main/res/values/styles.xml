<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDay" parent="AppTheme">
        <item name="android:windowBackground">@color/content_bg</item>
    </style>

    <style name="AppThemeNight" parent="AppTheme">
        <item name="android:windowBackground">@color/content_bg_night</item>
    </style>

    <style name="layout_theme_day">
        <item name="android:background">@color/content_bg</item>
    </style>
    <style name="layout_theme_night">
        <item name="android:background">@color/content_bg_night</item>
    </style>
    <style name="layout_theme">
        <item name="theme_default">@style/layout_theme_day</item>
        <item name="theme_night">@style/layout_theme_night</item>
    </style>

    <style name="text_color_theme_day">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="text_color_theme_night">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="text_color_theme">
        <item name="theme_default">@style/text_color_theme_day</item>
        <item name="theme_night">@style/text_color_theme_night</item>
    </style>

</resources>
